# ============ 应用基础配置 ============
APP_NAME=Webster API
API_HOST=127.0.0.1
API_PORT=8000
DEBUG=false
RELOAD=false

# 运行环境：development / production
ENVIRONMENT=development

# ============ 代理/真实客户端 IP 配置 ============
# 是否信任代理头（X-Forwarded-For / X-Real-IP）
TRUST_PROXY_HEADERS=false
# 可信代理列表（逗号分隔，支持 IP 或 CIDR）
TRUSTED_PROXIES=127.0.0.1

# ============ 数据库配置 ============
# SQLite 配置（开发环境）
DATABASE_URL=sqlite:///db/database.db
SQLITE_CHECK_SAME_THREAD=false

# PostgreSQL 配置示例（生产环境）
# DATABASE_URL=postgresql://user:password@localhost:5432/webster_db

# MySQL 配置示例
# DATABASE_URL=mysql://user:password@localhost:3306/webster_db

# ============ CORS 配置 ============
# 允许的来源，多个用逗号分隔
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# 是否允许携带 Cookie
CORS_ALLOW_CREDENTIALS=true

# 允许的 HTTP 方法，多个用逗号分隔，或使用 * 表示全部
CORS_ALLOW_METHODS=*

# 允许的请求头，多个用逗号分隔，或使用 * 表示全部
CORS_ALLOW_HEADERS=*

# ============ 日志配置 ============
LOG_LEVEL=INFO
# LOG_FILE=logs/app.log

# ============ JWT 认证配置 ============
# JWT 密钥（用于签名和验证 token）
# ⚠️ 生产环境必须使用强随机密钥，推荐通过 Secret 注入
SECRET_KEY=your-secret-key-change-in-production

# JWT 算法
ALGORITHM=HS256

# JWT issuer / audience（建议保持稳定）
JWT_ISSUER=webster-api
JWT_AUDIENCE=webster-api

# JWT key rotation（kid + 多 key 验证）
# 当前签名 key id
JWT_SIGNING_KID=default
# 历史/额外验证 key（JSON 字符串；用于密钥轮换期多 key 验证）
# JWT_KEYRING_JSON={"default":"<current-secret>","v0":"<old-secret>"}
JWT_KEYRING_JSON=

# Access Token 过期时间（分钟）
ACCESS_TOKEN_EXPIRE_MINUTES=10

# Refresh Token 过期时间（天）
REFRESH_TOKEN_EXPIRE_DAYS=7

# Token 前缀（用于 Authorization header）
TOKEN_PREFIX=Bearer
